<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="Album_music___Toma.Views.ArtistDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Album_music___Toma.ViewModels"
    xmlns:models="clr-namespace:Album_music___Toma.Models"
    Title="{Binding Artist.Name}">

    <ContentPage.BindingContext>
        <viewmodels:ArtistDetailViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Grid ColumnDefinitions="120,*" ColumnSpacing="12">
                <Frame Padding="0" CornerRadius="12" HasShadow="False" HeightRequest="120" WidthRequest="120">
                    <Image Aspect="AspectFill" Source="{Binding Artist.PhotoUrl}" />
                </Frame>
                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                    <Label Text="{Binding Artist.Name}" FontSize="24" FontAttributes="Bold" />
                    <Label Text="{Binding Artist.Genre}" FontSize="14" />
                </VerticalStackLayout>
            </Grid>

            <CollectionView ItemsSource="{Binding Albums}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Album">
                        <Frame Padding="12" CornerRadius="12" HasShadow="False">
                            <VerticalStackLayout Spacing="8">
                                <Grid ColumnDefinitions="80,*" ColumnSpacing="10">
                                    <Image Grid.Column="0" HeightRequest="80" WidthRequest="80"
                         Aspect="AspectFill" Source="{Binding CoverUrl}" />
                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Year}" FontSize="12" />
                                    </VerticalStackLayout>
                                </Grid>

                                <Label Text="Titles:" FontSize="12" />
                                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Songs}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="models:Song">
                                            <Button Padding="6,4"
                              HorizontalOptions="Start"
                              Text="{Binding Title}"
                              Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenSongCommand}"
                              CommandParameter="{Binding YoutubeUrl}" />
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
